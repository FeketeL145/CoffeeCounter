<Window x:Class="Coffee_Counter_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Coffee_Counter_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="nevbox" HorizontalAlignment="Left" Margin="75,10,0,0" VerticalAlignment="Top" Width="139"/>
        <ComboBox x:Name="ktipusbox"  HorizontalAlignment="Left" Margin="75,52,0,0" VerticalAlignment="Top" Width="139"/>
        <Label Content="Név:" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top"/>
        <Label Content="Kávé típus:" HorizontalAlignment="Left" Margin="8,50,0,0" VerticalAlignment="Top"/>
        <Button Content="Hozzáadás" HorizontalAlignment="Left" Margin="10,101,0,0" VerticalAlignment="Top" Width="86" Click="HozzaadasButton_Click"/>
        <Button Content="Új kávé" HorizontalAlignment="Left" Margin="8,126,0,0" VerticalAlignment="Top" Width="88" Click="UjkaveButton_Click"/>

    </Grid>
</Window>
